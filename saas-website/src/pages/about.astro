---
import Layout from '../layouts/Layout.astro';

const team = [
  { name: 'Rahul Sharma', role: 'CEO & Founder', bio: 'Former Twilio engineer with 10+ years in voice tech.' },
  { name: 'Priya Patel', role: 'CTO', bio: 'Ex-Google AI researcher specializing in NLP and speech recognition.' },
  {
    name: 'Arjun Mehta',
    role: 'Head of Product',
    bio: 'Previously led product at a leading SaaS communications platform.',
  },
  { name: 'Sneha Gupta', role: 'VP of Sales', bio: 'Scaled B2B sales at multiple startups from 0 to ₹100Cr ARR.' },
];

const values = [
  {
    title: 'Innovation First',
    description: 'We push the boundaries of AI to create solutions that were previously impossible.',
  },
  {
    title: 'Customer Obsessed',
    description: 'Every feature we build starts with a customer problem. Your success is our success.',
  },
  {
    title: 'Transparent & Honest',
    description: 'No hidden fees, no shady practices. We believe in building trust through transparency.',
  },
  {
    title: 'Scale With Purpose',
    description: "We help businesses grow responsibly with AI that respects people's time and privacy.",
  },
];
---

<Layout
  title="About"
  description="Learn about Voxeia - the team and mission behind AI-powered business calling solutions."
>
  <!-- Hero -->
  <section class="gradient-mesh relative pt-32 pb-20 overflow-hidden">
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="text-sm font-semibold text-primary uppercase tracking-wider">About Us</span>
        <h1 class="mt-3 text-4xl sm:text-5xl md:text-6xl font-black leading-tight text-text">
          We're building the future of <span
            class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
            >business communication</span
          >
        </h1>
        <p class="mt-6 text-lg text-text-muted leading-relaxed max-w-2xl">
          Voxeia was born from a simple idea: businesses shouldn't waste hours on repetitive calls. Our AI agents
          handle the routine so your team can focus on what matters — closing deals and building relationships.
        </p>
      </div>
    </div>
  </section>

  <!-- Mission -->
  <section class="py-20 border-y border-border bg-surface">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
        <div>
          <span class="text-sm font-semibold text-primary uppercase tracking-wider">Our Mission</span>
          <h2 class="mt-3 text-3xl sm:text-4xl font-bold text-text">Democratize AI calling for every business</h2>
          <p class="mt-4 text-text-muted leading-relaxed">
            We believe that every business — from a local shop in Jaipur to an enterprise in Mumbai — should have access
            to world-class AI communication tools. Our pay-as-you-go model starting at ₹5.99/min makes this a reality.
          </p>
          <p class="mt-4 text-text-muted leading-relaxed">
            Since our founding, we've helped over 500 businesses automate more than 10 million calls, saving them
            thousands of hours and millions in operational costs.
          </p>
        </div>
        <div class="grid grid-cols-2 gap-6">
          <div class="p-6 rounded-2xl bg-surface border border-border text-center">
            <div class="text-3xl font-black text-primary">2023</div>
            <p class="text-sm text-text-muted mt-1">Founded</p>
          </div>
          <div class="p-6 rounded-2xl bg-surface border border-border text-center">
            <div class="text-3xl font-black text-primary">50+</div>
            <p class="text-sm text-text-muted mt-1">Team Members</p>
          </div>
          <div class="p-6 rounded-2xl bg-surface border border-border text-center">
            <div class="text-3xl font-black text-primary">500+</div>
            <p class="text-sm text-text-muted mt-1">Clients</p>
          </div>
          <div class="p-6 rounded-2xl bg-surface border border-border text-center">
            <div class="text-3xl font-black text-primary">10M+</div>
            <p class="text-sm text-text-muted mt-1">Calls Made</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-24 bg-surface">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-sm font-semibold text-primary uppercase tracking-wider">Our Values</span>
        <h2 class="mt-3 text-3xl sm:text-4xl font-bold text-text">What drives us every day</h2>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          values.map((v) => (
            <div class="p-6 rounded-2xl bg-primary/5 border border-border hover:border-primary/30 transition-colors">
              <h3 class="text-lg font-semibold text-text mb-2">{v.title}</h3>
              <p class="text-text-muted text-sm leading-relaxed">{v.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-24 bg-surface-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-sm font-semibold text-primary uppercase tracking-wider">Our Team</span>
        <h2 class="mt-3 text-3xl sm:text-4xl font-bold text-text">Meet the people behind Voxeia</h2>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          team.map((member) => (
            <div class="p-6 rounded-2xl bg-surface-raised border border-border text-center hover:border-primary/30 transition-all group">
              <div class="w-20 h-20 mx-auto rounded-full bg-gradient-to-br from-primary/30 to-secondary/30 flex items-center justify-center mb-4 group-hover:scale-105 transition-transform">
                <span class="text-2xl font-bold text-text">
                  {member.name
                    .split(' ')
                    .map((n) => n[0])
                    .join('')}
                </span>
              </div>
              <h3 class="text-lg font-semibold text-text">{member.name}</h3>
              <p class="text-primary text-sm font-medium">{member.role}</p>
              <p class="text-text-muted text-sm mt-2">{member.bio}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
